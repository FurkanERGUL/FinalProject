@using FinalProject.UI.Models.VMs.MakaleVM;
@model List<MakaleListVM>
@{
    ViewData["Title"] = "Makaleler";
}

<h1>Makaleler</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">ReadingTime</th>
            <th scope="col">Details</th>
            @if (User.Identity.IsAuthenticated)
            {
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.ReadingTime</td>
                <td><a asp-action="Details" asp-controller="Makale" asp-route-id="@item.Id">Details</a></td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td><a asp-action="Update" asp-controller="Makale" asp-route-id="@item.Id">Update</a></td>
                    <td><a asp-action="Delete" asp-controller="Makale" asp-route-id="@item.Id">Delete</a></td>
                }
            </tr>
        }
    </tbody>
</table>