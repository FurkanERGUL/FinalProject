@using FinalProject.UI.Models.VMs.MakaleVM;
@model MakaleDetailVM
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">ReadingTime</th>
            <th scope="col">Details</th>
            <th scope="col">Publish Date</th>
            <th scope="col">Writer Name</th>
            <th scope="col">Konu Id</th>
            @if (User.Identity.IsAuthenticated)
            {
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Model.Id</th>
            <td>@Model.Title</td>
            <td>@Model.ReadingTime</td>
            <td>@Model.PublishDate</td>
            <td>@Model.WriterName</td>
            <td>@Model.KonuId</td>
            @if (User.Identity.IsAuthenticated)
            {
                <td><a asp-action="Update" asp-controller="Makale" asp-route-id="@Model.Id">Update</a></td>
                <td><a asp-action="Delete" asp-controller="Makale" asp-route-id="@Model.Id">Delete</a></td>
            }
        </tr>
    </tbody>
</table>

<div>
    <h3>@Model.Title</h3>
    <p>@Model.Content</p>
</div>